<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.visiostudios.tvanywhere"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" /> <!-- Allows the Mobile App to use Internet -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Checks if there's Internet -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_tv_anywhere"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_tv_anywhere"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.visiostudios.tvanywhere.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.visiostudios.tvanywhere.MainActivity" >
        </activity>
        <activity android:name="com.visiostudios.tvanywhere.ListActivity" />
        <activity
            android:name="com.visiostudios.tvanywhere.StreamActivity"
            android:label="@string/title_activity_stream" />
    </application>

</manifest>